@model IEnumerable<EMS.WebMvc.Models.Partie>

@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Parties</h2>
        </div>
        <div class="col-md-6">
            <p class="float-end">
                <a asp-action="CreateParty">Add New</a>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.PartyId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PartyName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SymbolId)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PartyId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PartyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SymbolId)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "CreateParty", new { id = item.PartyId })|                               
                                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>




